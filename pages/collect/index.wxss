.audio_list{
    border-top: 1rpx solid grey;
    display:flex;
    padding: 0rpx 20rpx;
    background-color:white ;
    align-items: center;
    padding: 20rpx;
}
.audio_list image{
    width: 150rpx;
    height: 150rpx;
    border-radius:10rpx;
}
.right{
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.title{
    font-size: 25rpx;
    font-weight: 400;
    padding: 10rpx;
}
.introduce{
    font-size: 20rpx;
    color:grey;
    padding: 10rpx;
}
.icon-bofang {
    font-size: 25rpx;
    color:grey;
}
text{
    display:inline-block;
    padding: 10rpx;
   font-size: 20rpx;
}
.order-item {
    height: 100rpx;
    width: 100%;
    display: flex;
    position: relative;
  }
  .remove{  
    width: 160rpx;  
    height: 100%;  
    background-color: red; 
    color: white; 
    position: absolute;  
    top: 0;  
    right: -180rpx;  
    display: flex;  
    justify-content: center;  
    align-items: center;  
  }  