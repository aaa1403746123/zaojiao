page{
    background-color: #edece8;

}
.user_info_wrap{
    position: relative;
    background-color: #f5f8fd;
    height: 45vh;
    overflow: hidden;
}
 .user_img_bg{
    height: 50vh;
    width: 100%;
    filter:blur(5rpx);
    
}
.userinfo{
    position: absolute;
    top:20%;
    left: 50%; 
    transform: translateX(-50%);
    text-align: center;
}
.user_icon{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
.user_name{
    margin-top: 40rpx;
    font-size: 40rpx;
}
.user_btn{
    border:1px black solid;
    font-size: 38rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 30%;
    padding:30rpx;
    border-radius:10rpx;
}
.user_myorder{
    margin-top: 20rpx;
    background-color: white;
}
.user_myorder_title{
    padding: 15rpx;
    border-bottom: 1px solid #ccc;
}
.user_myorder_wrap {
    display: flex;
    justify-content: space-around;
    text-align: center;
}
