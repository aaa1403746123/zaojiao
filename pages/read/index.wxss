page{
    background-color: #edece8;
}
.context{
    background-color:white;
    display: flex;
}
.context navigator{
    flex: 1;
    padding: 20rpx;
    text-align: center;
}
.context navigator image{
    width: 50%;
}
.context-title{
        font-size: 20rpx;
        font-family:Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
}
.today_tuijian{
    background-color: white;
    margin-top: 20rpx;
}
.today_tuijian text{
    display: inline-block;
    padding:10rpx 20rpx;
}
.tuijian_item{
    display: flex;
    padding-bottom: 20rpx;
}
.tuijian_left{
    flex:1;
    padding:0rpx 20rpx;
    font-weight: 500rpx;
}
.tuijian_left image{
    width: 100%;
    border-radius: 10rpx;
}
.tuijian_right{
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content:space-around;
}
.right_1{
    font-size: 30rpx;
}
.right_2{
    font-size: 20rpx;
    color:grey;
}